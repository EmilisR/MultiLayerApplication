@model GuiLayer.Models.ProductItemModel
@using System.Collections;
@{
    ViewBag.Title = "Prekės";
}

<h2>Prekių sąrašas</h2>

<form asp-controller="Item" asp-action="ItemList" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div class="form-group">
        <select asp-for="LibraryLayer.Enums.QuantitySource" asp-items="Html.GetEnumSelectList<LibraryLayer.Enums.QuantitySource>()"></select>
        <button type="submit" class="btn btn-default">Atnaujinti</button>
    </div>
</form>



@foreach (var product in Model.Products)
{
    <table class="item">
        <tr>
            <td>@product.Name</td>
        </tr>
        <tr>
            <td>
                <img src="http://www.lptps.com/wp-content/uploads/2016/11/asus-zenbook-ux390ua.jpg" alt="Laptop" width="60" height="42">
            </td>
        </tr>
        <tr>
            <td>@product.Price @LibraryLayer.Enums.Currency.EUR</td>
        </tr>
        <tr>
            <td>
                @using (Html.BeginForm("AddToBasket", "Basket", new { itemId = product.Id}, FormMethod.Post, null))
                {
                    <button type="submit" value="@product.Id" class="toBasket btn btn-default">Į krepšelį</button>
                }
                    
            </td>
        </tr>
    </table>
}
