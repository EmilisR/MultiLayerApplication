@model GuiLayer.Models.RegisterViewModel
@{
    ViewBag.Title = "Registracija";
}

<h2>Registracija</h2>

<form asp-controller="Account" asp-action="Registaer" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Registruokitės prie TechShop elektroninės parduotuvės</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="text" class="col-md-2 control-label">Vardas</label>
        <div class="col-md-10">
            <input asp-for="text" class="form-control" value="@Model.Name" name="model.Name" />
            <span asp-validation-for="text" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="text" class="col-md-2 control-label">Pavardė</label>
        <div class="col-md-10">
            <input asp-for="text" class="form-control" value="@Model.Surname" name="model.Surname" />
            <span asp-validation-for="text" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="text" class="col-md-2 control-label">Tel. nr.</label>
        <div class="col-md-10">
            <input asp-for="text" class="form-control" value="@Model.Phone" name="model.Phone" />
            <span asp-validation-for="text" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label">El. paštas</label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" value="@Model.Email" name="model.Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2 control-label">Slaptažodis</label>
        <div class="col-md-10">
            <input asp-for="Password" type="password" class="form-control" value="@Model.Password" name="model.Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    @if (@Model.Error != null && @Model.Error != "")
    {
        <h4 style="color: red">@Model.Error</h4>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Registruotis</button>
        </div>
    </div>
</form>