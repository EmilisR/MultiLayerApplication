@model GuiLayer.Models.LoginViewModel

@{
    ViewBag.Title = "Prisijungimas";
}


<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4>Prisijunkite prie TechShop elektroninės parduotuvės</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2 control-label">El. paštas</label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" value="@Model.Email" name="model.Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label">Slaptažodis</label>
                    <div class="col-md-10">
                        <input asp-for="Password" type="password" class="form-control" value="@Model.Password" name="model.Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                @if (@Model.Error != null && @Model.Error != "")
                {
                    <h4 style="color: red">@Model.Error</h4>
                }
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Prisijungti</button>
                        <button type="submit" class="btn btn-default">Prisijungti per Facebook</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>